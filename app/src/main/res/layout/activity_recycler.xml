<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TodayTipActivity">

    <TextView
        android:id="@+id/tt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="246dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/tt_id"
        app:layout_constraintStart_toStartOf="@+id/tt_id"
        app:layout_constraintTop_toBottomOf="@+id/tt_id" />

    <TextView
        android:id="@+id/tt_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/tt_title"
        app:layout_constraintStart_toStartOf="@+id/tt_title"
        app:layout_constraintTop_toBottomOf="@+id/tt_title" />

    <ImageView
        android:id="@+id/tt_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/tt_contents"
        app:layout_constraintStart_toStartOf="@+id/tt_contents"
        app:layout_constraintTop_toBottomOf="@+id/tt_contents"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/tt_image"
        app:layout_constraintStart_toStartOf="@+id/tt_image"
        app:layout_constraintTop_toBottomOf="@+id/tt_image" />
</androidx.constraintlayout.widget.ConstraintLayout>